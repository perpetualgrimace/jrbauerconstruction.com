---
import { ViewTransitions } from 'astro:transitions';

import Nav from "../components/layout/Nav.astro";
import Hero from "../components/layout/Hero.astro";
import HomeHero from "../components/layout/HomeHero.astro";
import Footer from "../components/layout/Footer.astro";

const {
	title,
	slug,
	heroProps
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>
			{title && title !== "Home" && `${title} | `}
			J.R. Bauer Construction</title>
		<link rel="preconnect" href="https://use.typekit.net" crossorigin>
		<link rel="preconnect" href="https://p.typekit.net" crossorigin>
		<link rel="stylesheet" href="https://use.typekit.net/imo5yjb.css">
		<link rel="icon" type="image/x-icon" href="/favicon.ico">
		<ViewTransitions /> <!-- TODO: test -->
	</head>

	<body>
		<Nav />
		{slug === "home"
		? <HomeHero props={heroProps} slug="home" />
		: <Hero props={heroProps} slug={slug} />
	}
		<main class="main" id="main">
			<div class={`content-wrapper ${slug}-content-wrapper`}>
				<slot />
			</div>
		</main>
	</body>

	<Footer />
</html>

<style is:global lang="scss">
	@import '../styles/main';

	.main {
		overflow: hidden;
		width: 100%;
	}

	.content-wrapper {
		padding: $sp-xxl * 1.5 0;
	}

	.content-wrapper > * {
		@include container;
		padding-left: $sp-xl;
		padding-right: $sp-xl;
	}

	.wrapper > :first-child {
		z-index: 1;
	}

	.bullet-list {
		margin-bottom: $sp-xl * 1.5;

		li {
			padding-left: 1em;
			margin-bottom: 0.5em;

			&:before {
				content: "â€¢";
				font-size: 1.5em;
				color: $aqua;
				display: block;
				position: absolute;
				left: 0;
				line-height: 1;
			}
		}
	}
</style>
