---
const {value, label} = Astro.props;
---

<p class="big-stat">
  <span class="big-stat-value u-title">{value}</span> <br />
  <span class="big-stat-label u-font-lg">{label}</span>
</p>

<style is:global lang="scss">
	@import '../styles/global';

  .big-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-image: radial-gradient(at top, $navy-medium, $navy-dark 100%);
    border-radius: 50%;
    min-width: 42vw;
    min-height: 42vw;

    @media (min-width: 666px) {
      min-width: auto;
      min-height: auto;
      width: 33vw;
      height: 33vw;
      max-width: 20rem;
      max-height: 20rem;
    }

    .big-stat-value {
      font-size: 7.5vw;

      @media (min-width: 1340px) {
        font-size: $font-size-xxxl * 2;
      }
    }

    .big-stat-label {
      margin-top: -0.25em;

      @media (max-width: 665px) {
        @include font-md;
      }
    }
  }

</style>