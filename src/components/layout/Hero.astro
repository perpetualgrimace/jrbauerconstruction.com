---
import RetinaImg from "../RetinaImg.astro";

const {slug, props = {}} = Astro.props;
const {title, headline, subhead} = props;
---

<div class="hero">
  <div class={`hero-img-wrapper ${slug}-hero-img-wrapper`}>
    <RetinaImg className="hero-img u-mh-auto" file={`hero/${slug}-hero`} extension="jpg" />
  </div>

  <div class="hero-caption u-mh-auto u-text-l-c">
    <h1 class="hero-title u-mb-xl">{headline || title}</h1>
    <p class="hero-paragraph u-font-md">{subhead}</p>
  </div>
</div>

<style is:global lang="scss">
	@import '../../styles/global';

  .hero {
    position: static;
  }

  .hero-img-wrapper {
    width: 100%;
    min-height: 40vh;
  }

  .hero-img {
    @include absolute-expand;
    object-fit: cover;
  }

  .hero-img-wrapper:after {
    @include pseudo;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100%;
    width: 100%;
    background-image: linear-gradient(to bottom, transparent 0%, $black 100%);
  }

  .hero-caption {
    max-width: 100%;
    z-index: 1;
  }

  .hero:after {
    @include pseudo;
    height: $sp-xxl;
    width: 100%;
    position: absolute;
    left: 0;
    right: 0;
    z-index: 1;
    background: $black;
  }
</style>