---
const {
  alt = "",
  className = "retina-img",
  extension = "png",
  file = "missing-file-prop",
  loading = "lazy",
  width = null,
  height = null
 } = Astro.props;
---

<img
  class={className}
  src={`/${file}.${extension}`}
  srcset={`
    /${file}.${extension} 1x,
    /${file}@2x.${extension} 2x`}
  alt={alt}
  loading={loading}
  draggable="false"
  width={width}
  height={height}
/>