---
const {
  alt = "",
  className = "retina-img",
  extension = "png",
  file = "missing-file-prop",
  loading = "lazy",
  width = null,
  height = null,
  at1x = "",
  at2x = "@2x"
 } = Astro.props;
---

<img
  class={className}
  src={`/${file}.${extension}`}
  srcset={`
    /${file}${at1x}.${extension} 1x,
    /${file}${at2x}.${extension} 2x`}
  alt={alt}
  loading={loading}
  draggable="false"
  width={width}
  height={height}
/>